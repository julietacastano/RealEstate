extends ../layout/index

block content
    div.py-5
        h1.text-4xl.my-5.font-semibold.text-center Real
            span.font-normal Estate 
        h2.text-center.text-2xl= page 

        div(class="py-8 px-4 max-w-md mx-auto")
            p(class= error ? "bg-red-500" : "bg-green-600").py-2.px-6.rounded-md.w-full.text-center.text-white= message

            if !error 
                a(href="/auth/login" class="text-center font-bold text-sm text-slate-600 uppercase mt-10 block") Sign in
