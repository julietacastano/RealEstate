extends ../layout/index

block content
    div
        h1.text-4xl.my-2.font-semibold.text-center Real
            span.font-normal Estate 
        h2.text-center.text-2xl= page 

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in  errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded-md= error.msg 

    .mt-5.mx-auto.max-w-md.my-5
        .bg-white.py-3.px-4.shadow
            form.space-y-5(method="POST" action="/auth/register" noValidate)
                input(type="hidden" name="_csrf" value= csrfToken)
                div 
                    label.block.text-sm.text-gray-800.mb-2(for="name") Enter your name
                    input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Name" type="text" name="name" value= user ? user.name :'')
                div 
                    label.block.text-sm.text-gray-800.mb-2(for="email") Enter your email
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="email" name="email" value= user ? user.email :'')
                div 
                    label.block.text-sm.text-gray-800.mb-2(for="password") Enter a password
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")
                div 
                    label.block.text-sm.text-gray-800.mb-2(for="repeatPassword") Repeat the password
                    input#repeatPassword.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repeat Password" type="password" name="repeatPassword")
                
                div.flex.items-left
                        p.text-gray-500.text-xs.mr-2 Already have an account? 
                        a(class="text-gray-600 text-xs underline" href="/auth/login") Sign in

                input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white rounded-md py-2 px-5 cursor-pointer" type="submit" value="Create account")