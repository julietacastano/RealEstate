extends ../layout/admin

block content
    div.py-5
        h1.text-4xl.my-5.font-semibold.text-center Real
            span.font-normal Estate 
        h2.text-center.text-2xl= page 
    
    //- pre= JSON.stringify(messages, undefined, 2)

    a(href="/my-properties" class="rounded py-2 px-10 bg-indigo-600 hover:bg-indigo-800 text-sm font-semibold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Back

    div(class="mx-auto bg-white shadow mb-10")
        if messages.length 
            ul 
                each message in messages
                    li(class="border-gray-200 border-b p-5")
                        p(class='font-semibold text-gray-800') Name: 
                            span(class="font-normal")=message.user.name 
                        p(class='font-semibold text-gray-800') Email: 
                            span(class="font-normal")=message.user.email 
                        p(class='font-semibold text-gray-800') Message: 
                            span(class="font-normal")=message.message 
                        p(class='font-semibold text-gray-800') Sent: 
                            span(class="font-normal")= formatDate(message.createdAt)

        else 
            p(class="text-center text-gray-600 py-10") There are no messages

